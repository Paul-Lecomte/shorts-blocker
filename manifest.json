{
  "manifest_version": 3,
  "name": "Block YouTube Shorts",
  "description": "This extension blocks YouTube Shorts.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.webp",
    "48": "icon.webp",
    "128": "icon.webp"
  }
}
